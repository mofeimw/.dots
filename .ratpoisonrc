# ====== initialize ======
exec xmodmap $HOME/.Xmodmap &
exec feh --randomize --bg-fill $HOME/Pictures/wallpaper/*
exec polybar bar
exec picom &
exec sloppy
exec rpws init 2 -k
exec xbindkeys
exec xsetroot -cursor_name left_ptr
exec git --git-dir=$HOME/.dots/ --work-tree=$HOME pull

startup_message off
# exec $HOME/.circus/quote
# exec ratpoison -c "echo the inn at the edge of the world"

# ====== keybinds ======
escape M-z

bind period restart
bind space exec $HOME/.circus/gaps bar
bind Tab windows
bind greater exec
bind Escape exec echo
bind Right rpwsn
bind Left rpwsp
bind bracketleft exec $HOME/.circus/gaps inc
bind bracketright exec $HOME/.circus/gaps dec
bind backslash exec $HOME/.circus/gaps toggle

bind z exec kitty
bind c hsplit
bind v vsplit
bind b resize
bind e fselect
bind q only
bind w delete
bind x remove
bind n next
bind p prev
bind u undo
bind r redo
bind i rpws1
bind o rpws2
bind m rpwsmn
bind h exec $HOME/.circus/rat move left
bind l exec $HOME/.circus/rat move right
bind k exec $HOME/.circus/rat move top
bind j exec $HOME/.circus/rat move bottom
bind f exec $HOME/.circus/rat exchange horizontal
bind g exec $HOME/.circus/rat exchange vertical

# non-release mirror
bind M-period restart
bind M-space exec $HOME/.circus/gaps bar
bind M-Tab windows
bind M-greater exec
bind M-Escape exec echo
bind M-Right rpwsn
bind M-Left rpwsp
bind M-bracketleft exec $HOME/.circus/gaps inc
bind M-bracketright exec $HOME/.circus/gaps dec
bind M-backslash exec $HOME/.circus/gaps toggle

bind M-z exec kitty
bind M-c hsplit
bind M-v vsplit
bind M-b resize
bind M-e fselect
bind M-q only
bind M-w delete
bind M-x remove
bind M-n next
bind M-p prev
bind M-u undo
bind M-r redo
bind M-i rpws1
bind M-o rpws2
bind M-m rpwsmn
bind M-h exec $HOME/.circus/rat move left
bind M-l exec $HOME/.circus/rat move right
bind M-k exec $HOME/.circus/rat move top
bind M-j exec $HOME/.circus/rat move bottom
bind M-f exec $HOME/.circus/rat exchange horizontal
bind M-g exec $HOME/.circus/rat exchange vertical

# ====== aliases ======
alias firefox exec firefox
alias skype exec skypeforlinux
alias spotify exec spotify

# ====== settings ======
set font "Fira Code:size=12:style=medium"
set warp 0
set msgwait 1

# border
set border 10
set fwcolor #15A6B1
set bwcolor #232530
set onlyborder 0
set padding 0 0 0 0

# window
set winname class
set winliststyle column
set winfmt [%n] %t
set wingravity center
set transgravity center
set maxsizegravity center

# frame
set framesels abcdefghijklmnopqrstuvwxyz
set framemsgwait 1
set framefmt current frame
set resizeunit 20

# status bar
set fgcolor #D65C78
set bgcolor #232530

set inputwidth 600
set barborder 6
set bargravity center
set barpadding 20 20

# "gaps"
set border 40
set padding 40 100 40 40
set barpadding 35 30
