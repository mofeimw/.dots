# ====== initialize ======
exec xmodmap $HOME/.Xmodmap
exec xbindkeys
exec feh --bg-fill $HOME/Pictures/wallpaper/yellow.jpg
exec picom &
exec $HOME/.circus/sloppy
exec rpws init 2 -k
exec git --git-dir=$HOME/.dots/ --work-tree=$HOME pull

startup_message off
# exec $HOME/.circus/quote
exec ratpoison -c "echo the inn at the edge of the world"

# ====== keybinds ======
escape M-z

bind period restart
bind space windows
bind greater exec
bind Escape exec echo
bind Right rpwsn
bind Left rpwsp
bind equal exec $HOME/.circus/border inc
bind minus exec $HOME/.circus/border dec

bind z windows
bind c hsplit
bind v vsplit
bind q only
bind w delete
bind d remove
bind n next
bind p prev
bind u undo
bind r redo
bind i exec rpws 1
bind o exec rpws 2
bind h exec $HOME/.circus/rat move left
bind l exec $HOME/.circus/rat move right
bind k exec $HOME/.circus/rat move top
bind j exec $HOME/.circus/rat move bottom
bind f exec $HOME/.circus/rat exchange horizontal
bind g exec $HOME/.circus/rat exchange vertical

bind x exec urxvt

# non-release mirror
bind M-period restart
bind M-space windows
bind M-greater exec
bind M-Escape exec echo
bind M-Right rpwsn
bind M-Left rpwsp
bind M-equal exec $HOME/.circus/border inc
bind M-minus exec $HOME/.circus/border dec

bind M-z windows
bind M-c hsplit
bind M-v vsplit
bind M-q only
bind M-w delete
bind M-d remove
bind M-n next
bind M-p prev
bind M-u undo
bind M-r redo
bind M-i exec rpws 1
bind M-o exec rpws 2
bind M-h exec $HOME/.circus/rat move left
bind M-l exec $HOME/.circus/rat move right
bind M-k exec $HOME/.circus/rat move top
bind M-j exec $HOME/.circus/rat move bottom
bind M-f exec $HOME/.circus/rat exchange horizontal
bind M-g exec $HOME/.circus/rat exchange vertical

bind M-x exec urxvt

# ====== aliases ======
alias firefox exec firefox
alias skype exec skypeforlinux
alias spotify exec spotify

# ====== settings ======
set font "Fira Code:size=12:style=medium"
set warp 0
set msgwait 1

# border
set border 10
set fwcolor #15A6B1
set bwcolor #232530
set onlyborder 0
set padding 0 0 0 0

# window
set winname class
set winliststyle column
set winfmt %n %t
set wingravity center
set transgravity center
set maxsizegravity center

# frame
set framemsgwait -1
set framefmt focus

# status bar
set fgcolor #D65C78
set bgcolor #232530

set inputwidth 600
set barborder 6
set bargravity center
set barpadding 20 20

# "gaps"
set border 60
set barpadding 50 40
