# ====== initialize ======
exec xmodmap $HOME/.Xmodmap &
exec feh --randomize --bg-fill $HOME/Pictures/wallpaper/*
exec polybar bar
exec picom &
exec sloppy
exec rpws init 3 -k
exec xbindkeys
exec xsetroot -cursor_name left_ptr
exec git --git-dir=$HOME/.dots/ --work-tree=$HOME pull

startup_message off
# exec $HOME/.circus/quote
# exec ratpoison -c "echo the inn at the edge of the world"

# ====== keybinds ======
escape C-z
# ======================
bind period restart
bind space exec $HOME/.circus/gaps bar
bind Tab windows
bind greater exec
bind Escape exec echo
bind Right rpwsn
bind Left rpwsp
bind bracketleft exec $HOME/.circus/gaps inc
bind bracketright exec $HOME/.circus/gaps dec
bind backslash exec $HOME/.circus/gaps toggle
# -------------------------------------------
bind z exec kitty
bind c hsplit
bind v vsplit
bind r resize
bind e fselect
bind q only
bind w delete
bind x remove
bind n next
bind b prev
bind u undo
bind y redo
bind i rpws1
bind o rpws2
bind p rpws3
bind m rpwsmn
bind h exec $HOME/.circus/rat move left
bind l exec $HOME/.circus/rat move right
bind k exec $HOME/.circus/rat move top
bind j exec $HOME/.circus/rat move bottom
bind f exec $HOME/.circus/rat exchange horizontal
bind g exec $HOME/.circus/rat exchange vertical
# ===============================================
# !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
# ===============================================
bind C-period restart
bind C-space exec $HOME/.circus/gaps bar
bind C-Tab windows
bind C-greater exec
bind C-Escape exec echo
bind C-Right rpwsn
bind C-Left rpwsp
bind C-bracketleft exec $HOME/.circus/gaps inc
bind C-bracketright exec $HOME/.circus/gaps dec
bind C-backslash exec $HOME/.circus/gaps toggle
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
bind C-z exec kitty
bind C-c hsplit
bind C-v vsplit
bind C-r resize
bind C-e fselect
bind C-q only
