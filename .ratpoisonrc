# ====== aliases ======
alias firefox exec firefox
alias skype exec skypeforlinux
alias spotify exec spotify

alias logout quit
alias shutdown exec poweroff

# ====== settings ======
set font "Fira Code:size=12:style=medium"
startup_message off
set msgwait 1
set warp 0

# border
set border 10
set fwcolor #15A6B1
set bwcolor #232530
set onlyborder 0
set padding 0 0 0 0

# window
set winname class
set winliststyle column
set winfmt [%n] %t
set wingravity center
set transgravity center
set maxsizegravity center

# frame
set framesels abcdefghijklmnopqrstuvwxyz
set framemsgwait 1
set framefmt current frame
set resizeunit 20

# status bar
set fgcolor #D65C78
set bgcolor #232530

set inputwidth 600
set barborder 6
set bargravity center
set barpadding 20 20

# "gaps"
set border 40
set padding 40 100 40 40
set barpadding 35 30
