# ====== initialize ======
exec xsetroot -solid "#232530"
exec xmodmap $HOME/.Xmodmap &

exec $HOME/.circus/sloppy

startup_message off
exec ratpoison -c "echo hola mofei"

# ====== keybinds ======
# escape on option-z/fn-z
escape M-z

bind period restart
bind space windows
bind Escape exec echo
bind greater exec

bind z windows
bind c hsplit
bind v vsplit
bind q only
bind w delete

bind x exec urxvt
bind f exec firefox

# non-release mirror
bind M-z windows
bind M-c hsplit
bind M-v vsplit
bind M-q only
bind M-w delete

bind M-x exec urxvt
bind M-f exec firefox

# ====== aliases ======
alias kitty exec kitty

# ====== settings ======
set font "Fira Code:size=12:style=medium"
set warp 0
set msgwait 5

# border
set border 10
set fwcolor #15A6B1
set bwcolor #232530
set onlyborder 0
set padding 0 0 0 0

# window
set winname class
set winliststyle column
set winfmt [%n] %c
set wingravity center
set transgravity center
set maxsizegravity center

# frame
set framemsgwait -1
set framefmt focus

# status bar
set fgcolor #D65C78
set bgcolor #232530

set inputwidth 600
set barborder 5
set bargravity center
set barpadding 20 20
