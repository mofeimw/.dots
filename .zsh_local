# functions

# markdown to pdf
pdf() {
    pandoc $1 --pdf-engine=xelatex -o ${1%%\.md}.pdf
}

# invisible cat!
transparent() {
    conf="$HOME/.config/kitty/transparent.conf"
    [ -s "$conf" ] && : > $conf || {
        echo "background_opacity 0" > $conf
        echo "window_margin_width 0" >> $conf
        echo "window_padding_width 0" >> $conf
    }
}

