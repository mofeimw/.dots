# zo
zz() {
    z $1
    [ $? -eq 1 ] && {
        cd $1 2> /dev/null
        [ $? -eq 1 ] && echo "not found." || {
            open .
            exit
        }
    } || {
        open .
        exit
    }
}

# markdown to pdf on change
mark() {
    [ "${1##*\.}" = "md" ] && {
        [ -f $1 ] && {
            echo "[${1}] converting to pdf upon changes..."
            echo $1 | entr pandoc $1 --pdf-engine=xelatex -V geometry:margin=1in -o ${1%%\.md}.pdf
        } || echo "file not found."
    } || echo "not a markdown file."
}

# invisible cat!
transparent() {
    conf="$HOME/.config/kitty/transparent.conf"
    [ -s "$conf" ] && : > $conf || {
        echo "background_opacity 0" > $conf
        echo "window_margin_width 0" >> $conf
        echo "window_padding_width 0" >> $conf
    }
}

