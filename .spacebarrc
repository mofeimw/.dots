#!/bin/sh

spacebar -m config position               top
spacebar -m config height                 37
spacebar -m config padding_left           20
spacebar -m config padding_right          20
spacebar -m config spacing_left           10
spacebar -m config spacing_right          15

spacebar -m config title                  off
spacebar -m config power                  off
spacebar -m config spaces                 on
spacebar -m config clock                  on

spacebar -m config text_font              "SF Pro:Regular:13.5"
spacebar -m config icon_font              "Font Awesome 5 Free:Solid:14.0"

spacebar -m config clock_format           "%-I:%M %p"

spacebar -m config background_color       0xff000000
spacebar -m config foreground_color       0xffFFFFFF
spacebar -m config space_icon_color       0xffFFE391

spacebar -m config power_icon_strip        
spacebar -m config space_icon_strip          
spacebar -m config clock_icon             ‎
spacebar -m config right_shell_icon       ‎
